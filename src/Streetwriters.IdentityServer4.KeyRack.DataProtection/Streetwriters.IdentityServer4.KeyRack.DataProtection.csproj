  </ItemGroup>

  <ItemGroup>
    <ProjectReference
      Include="..\Streetwriters.IdentityServer4.KeyRack\Streetwriters.IdentityServer4.KeyRack.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>
</Project>